#!/usr/bin/python

import os
import sys
import optparse

import pubtkt.app

def parse_args():
    p = optparse.OptionParser()
    p.add_option('-f', '--config')
    return p.parse_args()

def main():
    opts, args = parse_args()
    webapp = pubtkt.app.App(opts.config)
    webapp.run()

if __name__ == '__main__':
    main()

